{
  "name": "xmlion",
  "version": "1.1.0",
  "description": "string building xml",
  "main": "dist/xmlion.js",
  "module": "dist/xmlion.es.js",
  "scripts": {
    "m": "microbundle --help",
    "test": "ava --tap | tap-nyan",
    "pretest": "yarn run build:umd",
    "prebuild": "yarn run standard",
    "build": "yarn run build:es && yarn run minify",
    "build:es": "microbundle build --format es --compress false --entry src/xmlion.js --output dist/",
    "build:umd": "microbundle build --format umd --compress false --entry src/xmlion.js --output dist/ && mv dist/xmlion.umd.js dist/xmlion.js",
    "minify": "microbundle build --format umd --compress true --entry src/xmlion.js --output dist/ && mv dist/xmlion.umd.js dist/xmlion.min.js",
    "preminify": "yarn run build:umd",
    "standard": "semistandard src/* test.js"
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "author": "Bryan Maamo <ninjabryan@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninbryan/xmlion"
  },
  "bugs": {
    "url": "https://github.com/ninbryan/xmlion/issues"
  },
  "keywords": [
    "xml",
    "string",
    "lion"
  ],
  "license": "ISC",
  "devDependencies": {
    "ava": "0.22.0",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.1",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-latest": "6.24.1",
    "microbundle": "0.2.3",
    "semistandard": "10.0.0",
    "tap-nyan": "1.1.0"
  }
}
